<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HackerspaceApp.Views.DashboardPage"
             xmlns:local="clr-namespace:HackerspaceApp.ViewModels"
             Visual="Material"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid BackgroundColor="Black">
            <Label Text="hackerspace" FontSize="Large" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" VerticalOptions="Start"/>
            <Label Text="config" FontSize="Large" FontAttributes="Bold" TextColor="White" HorizontalOptions="End" VerticalOptions="Start">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding EditConfigurationCommand}"/>
                </Label.GestureRecognizers>
            </Label>
            <StackLayout BindableLayout.ItemsSource="{Binding WebApps}" Margin="0, 50, 0, 0">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Spacing="10">
                            <Label Text="{Binding Title}" TextColor="White" FontSize="Large">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:DashboardViewModel}}, Path=OpenWebViewCommand}" CommandParameter="{Binding}"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </StackLayout>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>